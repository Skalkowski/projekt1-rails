 <tbody>
      <% @gists.each do |gist| %>
      <tr>
        <% if gist.snippet.length > 10 %>
        <td><%= gist.snippet[0, 20]%> [...]</td>
        <% else %>
        <td><%= gist.snippet %></td>
        <% end %>
        <td><%= gist.lang %></td>
        <td><%= gist.description %></td>
        <td><a href="/gists/<%= gist.id %>"><button type="button" class="btn btn-sm btn-info">show</button></a></td>
        <td><a href="<%= edit_gist_path(gist) %>">  <button type="button" class="btn btn-sm btn-warning">Edit</button></a></td>
        <td><%= link_to gist, method: :delete, data: { confirm: 'Are you sure?' } do %><button type="button" class="btn btn-sm btn-danger">Delete</button><% end %></td>
      </tr>
      <% end %>
    </tbody>